<%= form_for @clip, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Clip</legend>

    <div class="control-group">
      <%= f.label :filename, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :filename, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :subtitle, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :subtitle, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :movie_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :movie_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', clips_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
