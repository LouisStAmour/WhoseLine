<%= form_for @playlist_clip, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Playlist Clip</legend>

    <div class="control-group">
      <%= f.label :position, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :position, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :clip_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :clip_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :playlist_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :playlist_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', playlist_clips_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
